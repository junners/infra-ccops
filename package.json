{
  "name": "ccops",
  "description": "corecraft ops cli",
  "version": "0.0.0",
  "author": "junners",
  "bin": {
    "ccops": "./bin/run.js"
  },
  "bugs": "https://github.com/junners/infra/ccops/issues",
  "dependencies": {
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "inversify": "7.5.4",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@oclif/test": "^4",
    "@types/node": "^24",
    "eslint": "^9",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10",
    "expect": "^30.0.3",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "lint-staged": "^16.1.2",
    "oclif": "^4",
    "shx": "^0.4.0",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "engines": {
    "node": "24.x"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "homepage": "https://github.com/junners/infra/ccops",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "ccops",
    "dirname": "ccops",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "repository": "junners/infra/ccops",
  "scripts": {
    "build": "shx rm -rf dist tsconfig.tsbuildinfo && tsc -b",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "precommit": "lint-staged",
    "prepack": "pnpm build && oclif manifest && oclif readme",
    "test": "node --test",
    "test:cov": "node --experimental-test-coverage --test",
    "version": "oclif readme && git add README.md",
    "prepare": "husky",
    "prestart": "pnpm build",
    "start": "node bin/run.js"
  },
  "lint-staged": {
    "*.ts": ["eslint --fix", "prettier --write"]
  },
  "types": "dist/index.d.ts"
}
